    <profiles>
        <profile>
            <id>docker</id>
            <activation>
                <property>
                    <name>maven_docker</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>net.wouterdanes.docker</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <version>3.0</version>
                        <executions>
                            <execution>
                                <configuration>
                                    <images>
                                        <image>
                                            <id>${project.name}</id>
                                            <dockerFile>${project.basedir}/Dockerfile</dockerFile>
                                            <keep>true</keep>
                                            <nameAndTag>propel/${project.name}:${project.version}</nameAndTag>
                                            <artifacts>
                                                <artifact>
                                                    <file>${project.build.directory}/${project.name}.war</file>
                                                    <dest>target/${project.name}.war</dest>
                                                </artifact>
                                                <artifact>
                                                    <file>${project.build.directory}/dependency/jetty-runner.jar</file>
                                                    <dest>target/dependency/jetty-runner.jar</dest>
                                                </artifact>
                                                <artifact>
                                                    <file>${project.build.directory}/classes/jetty.xml</file>
                                                    <dest>target/classes/jetty.xml</dest>
                                                </artifact>
                                            </artifacts>
                                        </image>
                                    </images>
                                </configuration>
                                <id>build</id>
                                <goals>
                                    <goal>build-images</goal>
                                </goals>
                            </execution>
                            <execution>
                                <configuration>
                                    <images>
                                    <image>
                                        <id>${project.name}</id>
                                        <tags>
                                            <tag>propel/${project.name}:latest</tag>
                                        </tags>
                                    </image>
                                    </images>
                                </configuration>
                                <goals>
                                    <goal>tag-images</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>push</id>
                                <goals>
                                    <goal>push-images</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
